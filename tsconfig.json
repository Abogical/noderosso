{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "core/*": ["*", "bazel-bin/*", "bazel-genfiles/*"]
    },
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["es2017", "dom", "esnext.array", "es2020.string"],
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true
  },
  "paths": {
    "@noderosso/*": ["*", "bazel-bin/*", "bazel-genfiles/*"]
  },
  "exclude": ["bazel-*", "node_modules"]
}
